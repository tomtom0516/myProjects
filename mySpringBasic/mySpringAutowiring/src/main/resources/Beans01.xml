<?xml version = "1.0" encoding = "UTF-8"?>

<beans xmlns = "http://www.springframework.org/schema/beans"
       xmlns:xsi = "http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation = "http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <!-- Definition for textEditor bean -->
    <!-- Name is spellCheckerByName in TextEditor -->
    <bean id = "textEditor" class = "com.yapeng.mySpringBasic.TextEditor" autowire = "byName">
        <property name = "name" value = "Generic Text Editor" />
    </bean>

    <!-- Definition for spellChecker bean -->
    <!-- bean id should be "spellCheckerByName" -->
    <bean id = "sc" class = "com.yapeng.mySpringBasic.SpellChecker">

    </bean>

</beans>